---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Preload fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Manrope:wght@500;600;700&display=swap" rel="stylesheet">

		<ViewTransitions />

		<style is:global>
			/* Base font settings */
			:root {
				--font-sans: 'Inter', system-ui, -apple-system, sans-serif;
				--font-display: 'Manrope', var(--font-sans);
			}

			html {
				font-family: var(--font-sans);
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				scroll-behavior: smooth;
			}

			h1, h2, h3, h4, h5, h6 {
				font-family: var(--font-display);
			}

			/* Your existing global styles */
			.prose {
				max-width: 65ch;
			}

			.prose p {
				margin-bottom: 1.5em;
			}

			/* Add to your global styles */
			.fade-in-up {
				animation: fadeInUp 0.5s ease-out;
			}

			@keyframes fadeInUp {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
		</style>
	</head>
	<body class="bg-white text-gray-900 antialiased">
		<Header />
		<main class="flex-1" transition:animate="slide">
			<slot />
		</main>
		<Footer />
	</body>
</html>
