---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class=" bg-zinc-900 text-white flex flex-col h-screen">
		<header class="container mx-auto py-12 flex justify-between">
			<div class="text-white">
				<h2 class="text-white text-4xl">Rafael Vidal</h2>
				<p>Lead Software Engineer, Consultant</p>
			</div>
			<div class="">
				<a class="p-3" href="#">Linked-In</a>
				<a class="p-3" href="#">Github</a>
			</div>
		</header>
		<section class="container mx-auto flex-1">
			<slot />
		</section>
		<footer class="container mx-auto py-10">
			Build with: Astrojs, Tailwind and Vue
		</footer>
	</body>
</html>
