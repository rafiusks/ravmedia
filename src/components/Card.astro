---
interface Props {
	title: string;
	description: string;
	icon?: string;
	href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<div class="group relative bg-white rounded-xl border border-gray-200 
            hover:border-primary-200 hover:shadow-lg transition-all duration-300">
  <div class="p-6">
    {icon && <span class="text-2xl mb-4 block">{icon}</span>}
    <h3 class="text-xl font-semibold text-gray-900 mb-2">
      {href ? <a href={href}>{title}</a> : title}
    </h3>
    <p class="text-gray-600">
      {description}
    </p>
  </div>
</div> 