---
interface Props {
	columns?: 2 | 3 | 4;
	gap?: "sm" | "md" | "lg";
}

const { columns = 3, gap = "md" } = Astro.props;

const cols = {
	2: "md:grid-cols-2",
	3: "md:grid-cols-2 lg:grid-cols-3",
	4: "md:grid-cols-2 lg:grid-cols-4",
};

const gaps = {
	sm: "gap-4",
	md: "gap-6",
	lg: "gap-8",
};
---

<div class:list={[
  "grid grid-cols-1 gap-8",
  cols[columns],
  gaps[gap]
]}>
  <slot />
</div>

<style>
  .grid > :global(*) {
    @apply transition-all duration-300;
  }
  .grid > :global(*:hover) {
    @apply shadow-lg -translate-y-1;
  }
</style> 