---
interface Props {
	title?: string;
	subtitle?: string;
	class?: string;
}

const { title, subtitle, class: className = "" } = Astro.props;
---

<section class:list={["py-16", className]}>
  <div class="container mx-auto px-4">
    {(title || subtitle) && (
      <div class="max-w-3xl mx-auto mb-16">
        {title && (
          <h2 class="text-4xl font-bold mb-4 animate-fade-in">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-xl text-gray-400 animate-fade-in delay-100">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section> 