---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout 
  title="Contact - RavMedia" 
  description="Get in touch with RavMedia for your enterprise software solutions. Let's discuss your project needs."
>
	<main class="bg-white">
		<!-- Hero Section -->
		<section class="bg-gradient-to-b from-gray-50 to-white py-16">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto text-center">
					<h1 class="font-display text-4xl md:text-5xl font-semibold tracking-tight text-gray-900 mb-4">
						Let's Connect
					</h1>
					<p class="text-xl text-gray-600">
						Ready to transform your business? Let's discuss your project needs.
					</p>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="py-16">
			<div class="container mx-auto px-4 max-w-4xl">
				<div class="grid lg:grid-cols-2 gap-12">
					<!-- Contact Form -->
					<div>
						<ContactForm />
					</div>
					
					<!-- Contact Information -->
					<div class="bg-primary-50 rounded-xl p-8">
						<h3 class="font-display text-xl font-semibold text-gray-900 mb-6">
							Get in Touch
						</h3>
						<p class="text-gray-600 mb-8">
							We're always interested in hearing about new opportunities and collaborations.
						</p>
			
					<div class="grid md:grid-cols-2 gap-6">
						<a href="https://www.linkedin.com/in/rafvidal/" 
						   class="flex items-center p-6 bg-primary-50 rounded-lg transition-all duration-300 
								  hover:bg-primary-100 hover:transform hover:translate-y-[-2px] hover:shadow-md
								  border border-primary-200">
							<svg class="w-8 h-8 mr-4 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
							</svg>
							<div>
								<h3 class="font-semibold text-lg mb-1 text-gray-900">LinkedIn</h3>
								<p class="text-gray-600">Connect professionally</p>
							</div>
						</a>

						<a href="https://github.com/rafiusks" 
						   class="flex items-center p-6 bg-gray-50 rounded-lg transition-all duration-300
								  hover:bg-gray-100 hover:transform hover:translate-y-[-2px] hover:shadow-md
								  border border-gray-200">
							<svg class="w-8 h-8 mr-4 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							<div>
								<h3 class="font-semibold text-lg mb-1 text-gray-900">GitHub</h3>
								<p class="text-gray-600">Check out my code</p>
							</div>
						</a>
					</div>

					<!-- Call to Action -->
					<div class="mt-8 pt-8 border-t border-gray-200 text-center">
						<h3 class="font-display text-xl font-semibold text-gray-900 mb-4">
							Ready to Start Your Project?
						</h3>
						<p class="text-gray-600 mb-6">
							Let's schedule a consultation to discuss your enterprise software needs.
						</p>
						<Button href="mailto:contact@ravmedia.dev" variant="primary" size="lg">
							Send Email
						</Button>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>