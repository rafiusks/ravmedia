---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
---

<Layout 
  title="Page Not Found - RavMedia" 
  description="The page you're looking for doesn't exist."
>
  <main class="bg-white">
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <div class="text-8xl font-display font-bold text-primary-600 mb-4">404</div>
          <h1 class="font-display text-3xl md:text-4xl font-semibold text-gray-900 mb-4">
            Page Not Found
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Sorry, we couldn't find the page you're looking for. 
            The page may have been moved or doesn't exist.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <Button href="/" variant="primary" size="lg">
              Go Home
            </Button>
            <Button href="/services" variant="outline" size="lg">
              View Services
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 