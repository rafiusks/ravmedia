---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Rafael Vidal">
	<main>
		<!-- Hero Section with purple gradient -->
		<div class="min-h-[80vh] bg-gradient-to-br from-zinc-900 via-purple-900/20 to-zinc-900">
			<div class="container mx-auto px-4 h-full flex flex-col justify-between">
				<div class="flex-grow flex items-center">
					<div class="max-w-3xl fade-in">
						<h1 class="text-7xl font-display tracking-tight mb-6">Hi there</h1>
						<p class="text-2xl text-gray-300">Software Engineer & Consultant</p>
					</div>
				</div>
				<div class="text-right pb-20">
					<p class="text-7xl m-8">&#8595;</p>
				</div>
			</div>
		</div>

		<!-- Tech Section -->
		<section class="h-screen w-full bg-gray-200 text-black flex">
			<div class="container m-auto flex-col bg-white h-[95%] p-4 shadow-lg rounded snap-center snap-mandatory">
				<div>
					<h2 class="py-12 text-5xl font-display tracking-tight">
						Software Engineering Technologies
					</h2>
				</div>
				<div class="relative mt-10 mb-8">
					<img
						class="w-full"
						src="https://www.freecodecamp.org/news/content/images/2020/06/front-end-vs-back-end-engineer-2.jpg"
						usemap="#image-map"
					/>
					<div class="absolute flex w-full h-full z-50 top-0 bg-blend-multiply">
						<div class="w-[49%] h-full"></div>
						<div class="flex-grow border-8 bg-white border-white"></div>
						<div class="w-[49%] h-full"></div>
					</div>
				</div>
				<div class="flex">
					<div class="p-4 space-y-5 w-[49%]">
						<div class="columns-2 space-y-5">
							<!-- Your existing content -->
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
